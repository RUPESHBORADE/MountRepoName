@model IEnumerable<Testwork.Models.Employee>

<h2>Employees List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create New Employee</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Employee Code</th>
            <th>Employee Name</th>
            <th>Department</th>
            <th>Designation</th>
            <th>Basic Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeCode</td>
                <td>@employee.EmployeeName</td>
                <td>@employee.Department</td>
                <td>@employee.Designation</td>
                <td>@employee.BasicSalary</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeCode" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeCode" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
