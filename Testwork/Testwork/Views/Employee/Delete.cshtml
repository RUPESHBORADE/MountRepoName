@model Testwork.Models.Employee

<h2>Delete Employee</h2>

<div>
    <h4>Are you sure you want to delete this employee?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Employee Code</dt>
        <dd class="col-sm-10">@Model.EmployeeCode</dd>

        <dt class="col-sm-2">Employee Name</dt>
        <dd class="col-sm-10">@Model.EmployeeName</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department</dd>

        <dt class="col-sm-2">Designation</dt>
        <dd class="col-sm-10">@Model.Designation</dd>

        <dt class="col-sm-2">Basic Salary</dt>
        <dd class="col-sm-10">@Model.BasicSalary</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="EmployeeCode" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
